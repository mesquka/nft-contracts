{
  "extends": "solhint:recommended",
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "compiler-version": ["off"],
    "constructor-syntax": "warn",
    "quotes": ["error", "double"],
    "reason-string": ["warn", { "maxLength": 256 }],
    "func-visibility": ["warn", { "ignoreConstructors": true }],
    "not-rely-on-time": "off",
    "no-empty-blocks": "off"
  }
}
